<Window x:Class="WpfApp66.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp66"
        mc:Ignorable="d" Icon="ghost.ico" BorderBrush="Yellow" BorderThickness="5"
        Title="Kísértetház" Height="550" Width="800" Background="AliceBlue">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--első sor-->
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Text="Három ajtó van előtted.." FontSize="15" FontStyle="Italic"/>
            <TextBlock Text="Az egyik mögött szellem van." FontSize="15" FontStyle="Italic"/>
            <TextBlock Text="Melyiket nyitod ki?" FontSize="20" FontWeight="Bold"/>
        </StackPanel>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="Kísértetház" 
                   HorizontalAlignment="Center" FontSize="40" FontWeight="Bold"/>

        <TextBlock Grid.Row="0" Grid.Column="2" Text="Rekord: 0"
                   HorizontalAlignment="Right" Foreground="Orange" FontWeight="ExtraBold"/>
        
        <!-- második sor -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Image Visibility="Hidden" Source="ghost.png" Height="150" RenderTransformOrigin="0.5,0.5" Margin="-56,10,56,204">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-35.465"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Source="door1.png" Height="200"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Image Visibility="Hidden" Source="ghost.png" Height="150" RenderTransformOrigin="0.5,0.5" Margin="-56,10,56,204">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-35.465"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Source="door2.png" Height="200"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="3">
            <Image Visibility="Hidden" Source="ghost.png" Height="150" RenderTransformOrigin="0.5,0.5" Margin="-56,10,56,204">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-35.465"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Source="door3.png" Height="200"/>
        </Grid>

        <!-- harmadik sor-->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Új játék" Padding="6" FontSize="15" FontWeight="ExtraBold"
                    Foreground="Orange" Background="Yellow" />
            <Button Content="Téma" Padding="6" FontSize="15" FontWeight="ExtraBold"
                    Foreground="Orange" Background="Yellow" Margin="10 0"/>
            <TextBlock Text="Pontszámod: 0" FontWeight="ExtraBold" Foreground="Orange"
                       VerticalAlignment="Center" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>

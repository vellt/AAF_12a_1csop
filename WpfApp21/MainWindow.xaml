<Window x:Class="WpfApp21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp21"
        mc:Ignorable="d"
        Icon="typewriter.ico"
        WindowStartupLocation="CenterScreen"
        Title="karakterszámláló" Height="600" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Írd be a szöveget:" 
                       Margin="10"
                       FontSize="20"/>
            <TextBox Name="bemenet" BorderThickness="5" 
                     Margin="10" 
                     Height="350"
                     TextWrapping="Wrap"
                     FontSize="20"
                     Padding="5"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="karakterek száma: "
                           FontSize="20"/>
                <TextBlock Name="kimenet" Text="0"
                           FontSize="20"
                           FontWeight="Black"
                           Foreground="Red"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

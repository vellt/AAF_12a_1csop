                <Image Name="kep" Source="1.jpg" Width="500" Height="300" Margin="20"/>
                <TextBlock Name="szoveg" Text="Amikor pizzát rendelsz, és a csóró haverod odaszól, hogy csirkeszárnyat is." Foreground="White" FontSize="30" Width="600" TextWrapping="Wrap" TextAlignment="Center"/>
                <Button Name="gomb" Content="Új meme" Background="Yellow" Width="200" Height="50" Margin="20" BorderBrush="Orange" BorderThickness="3" Foreground="Orange" FontSize="30" FontWeight="Bold"/>

<Window x:Class="WpfApp46.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp46"
        mc:Ignorable="d"
        Icon="topjoy.ico"
        Background="#1C203A"
        Title="Topjoy" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Image Source="topjoy.png" Height="100" Margin="20"/>
            <TextBlock Name="uzi" Background="#00CC6A" Text="Kattints az üziért!"
                       Foreground="White" Padding="20" Width="600" 
                       TextAlignment="Center" FontSize="20" TextWrapping="Wrap"/>
            <Button Name="gomb" Background="Green" Content="Új üzenetet kérek"
                    FontSize="15" Foreground="White" Padding="15"/>
        </StackPanel>
    </Grid>
</Window>
